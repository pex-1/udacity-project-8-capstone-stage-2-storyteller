<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:id="@+id/category_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:contentDescription="@string/story_category_image"
            android:id="@+id/category_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"/>

        <TextView
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/category_text_view"
            android:layout_toEndOf="@+id/category_image_view"
            android:layout_toRightOf="@+id/category_image_view"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/line_1"
            android:textSize="20sp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>